<Window x:Class="RPR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPR"
        mc:Ignorable="d"
        Title="RPR" Height="450" Width="800" Loaded="Window_Loaded" MouseMove="Window_MouseMove" MinWidth="600" MinHeight="300" WindowState="Maximized">
    <Grid>
        <Canvas x:Name="MainView" Margin="0,0,0,40" Background="Black" Initialized="MainView_Initialized" MouseEnter="MainView_MouseEnter" MouseLeave="MainView_MouseLeave">
            <local:TestShape Width="150" Height="150" StrokeThickness="2" Stroke="White"></local:TestShape>
        </Canvas>
        <Label x:Name="Coords" Content="Label" BorderBrush="Black" Foreground="#FFFBFBFB" Background="Black" RenderTransformOrigin="0.499,-0.462" Height="41" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
