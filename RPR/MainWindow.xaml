<Window x:Class="RPR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" MouseMove="Window_MouseMove" MinWidth="600" MinHeight="300" WindowState="Maximized">
    <Grid>
        <Canvas x:Name="MainView" Margin="10,10,10,40" Background="Black" Initialized="MainView_Initialized" MouseEnter="MainView_MouseEnter" MouseLeave="MainView_MouseLeave"/>
        <Label x:Name="Coords" Margin="0,0,0,5" Content="Label" BorderBrush="Black" Foreground="#FFFBFBFB" Background="Black" HorizontalAlignment="Center" Width="776" Height="26" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
